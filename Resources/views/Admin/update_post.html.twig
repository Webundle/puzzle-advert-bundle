{% trans_default_domain 'advert' %}

{% extends 'AdvertBundle:Admin:layout.html.twig' %}

{% block title %}{{ parent() }} - {{ "advert.post.update.title"|trans|capitalize }} {{ post.name|capitalize }} {% endblock %}

{% block breadcrumbmodule %}
    {{ parent() }}
    <a href=" {{ url('puzzle_admin_advert_post_list') }} ">
       {{ 'advert.post.list.title'|trans|capitalize }}
    </a>
    <i class="fa fa-chevron-right"></i>
    <em>{{ "advert.post.update.title"|trans|capitalize }}</em>
{% endblock %}

{% block content %}
    <div id="page_content_inner">
        {% include 'AdvertBundle:Admin:form_post.html.twig' with {'form': form, 'post': post} %}
    </div>
{% endblock %}
